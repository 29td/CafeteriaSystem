@model List<CafeteriaSystem.Models.MenuItem>
@{
    ViewData["Title"] = "VieMenuItems";
}

@{
    var restaurantId = ViewData["RestaurantId"];
    var restaurantName = ViewData["RestaurantName"];
}
<h2>Menu Items for @restaurantName</h2>
<p>
    <a asp-action="CreateMenuItem" asp-route-restaurantId="@restaurantId" class="btn btn-primary">Add Menu Item</a>
</p>
@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No menu items available.</p>
}
<a asp-action="Index" class="btn btn-secondary">Back to Restaurants</a>

